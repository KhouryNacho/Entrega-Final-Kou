<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Add a new project</h4>
            <form action="/admin/novedades/agregar" method="post"
             enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Description" name="project_description">
                </div>
                <div class="mb-3 row">
                    <label>imagen: <input type="file" class="form-control" name="imagen" id="imagen" /></label>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Members" name="project_members"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Status" name="project_status"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>